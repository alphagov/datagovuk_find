<% content_for :page_title do %>
  Results for "<%= @query %>" - Find Data Beta
<% end %>

<form action="/search" method="GET">
  <div class="dgu-split-background__top">
    <div class="dgu-split-background__top-inner">
      <%= render partial: 'layouts/feedback_survey_banner' %>
      <h1 class="heading-large">Search results</h1>
      <div class="grid-row">
        <div class="column-two-thirds dgu-search-box">
          <label for="q" class="visuallyhidden">Search</label>
          <input id="q" name="q" type="text" class="form-control dgu-search-box__input" value="<%= @query %>"/><button type="submit" class="dgu-search-box__button">Find data</button>
        </div>
      </div>
    </div>
  </div>

  <div class="dgu-split-background__bottom">
    <div class="grid-row dgu-filters">
      <div class="column-one-third">
        <%= render 'filters' %>
      </div>

      <div class="column-two-thirds dgu-results">
        <%= render 'sort' %>

        <% if @query.present? %>
          <span class="dgu-results__summary">
            <span class="bold-small"><%= @num_results %></span>
            results found for <span class="bold-small">‘<%= @query %>’</span>
          </span>
        <% end %>

        <% unless @organisation.blank? %>
        <% if @query.empty? %>Datasets <% end %>published by
        <span class="bold-small">‘<%= @organisation %>’<% end %></span>
        <% unless @location.blank? %>filtered by
        <span class="bold-small">‘<%= @location %>’<% end %></span>

        <div>
          <% if @num_results == 0 %>
            <h2 class="heading-medium">Please try:</h2>
            <ul class="list list-bullet">
              <li>searching again using different words</li>
              <li>clearing your filters</li>
            </ul>
          <% else %>
            <% @datasets.each do |d| %>
              <div class="dgu-results__result">
                <h2 class="heading-medium">
                  <a href="/dataset/<%= d.name %>"><%= d.title %></a>
                </h2>
                <dl class="dgu-metadata__box">
                  <dt>Published by:</dt>
                  <dd><%= link_to d.organisation['title'], search_path(publisher: d.organisation['title']) %></dd>
                  <dt>Last updated:</dt>
                  <dd><%= format(d.last_updated_at) %></dd>
                  <dt>Geographical area:</dt>
                  <% if d.location1.present? %>
                    <dd><%= d.location1 %></dd>
                  <% else %>
                    <dd class="dgu-unavailable">Not applicable</dd>
                  <% end %>
                </dl>
                <p><%= truncate(strip_tags(d.summary), length: 200, separator: ' ') %></p>
              </div>
            <% end %>
            <div class="dgu-pagination">
              <nav>
                <%= page_entries_info @datasets, entry_name: 'dataset' %>
                <span class="dgu-pagination__numbers"><%= paginate @datasets, window: 2 %></span>
              </nav>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</form>

<section class="supporting docs">
  <h2 class="heading-medium">
    <%= t('.supporting_docs')%>
  </h2>

  <table>
    <thead>
    <tr>
      <th class="title"><%= t('.link_to_doc')%></th>
      <th><%= t('.format')%></th>
      <th><%= t('.date_added')%></th>
    </tr>
    </thead>
    <tbody>
    <% dataset.docs.each do |doc| %>
      <tr>
        <td class="title">
          <a href="<%= doc["url"]%>" class="govuk-link"><% if doc["name"].empty? %> No name specified <% else %> <%=doc["name"]%><% end %></a>
        </td>
        <td><%= doc["format"] or "N/A" %></td>
        <td><%= format_timestamp(doc["metadata_modified"]) or "N/A" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

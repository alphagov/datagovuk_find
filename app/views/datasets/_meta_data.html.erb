<section class="meta-data">
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large">
        <%= unescape(@dataset.title) %>
      </h1>
    </div>
  </div>
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="dgu-metadata__box dgu-metadata__box--in-dataset">
        <dl class="metadata">
          <dt>Published by:</dt>
          <dd><%= link_to @dataset.organisation['title'], search_path(publisher: @dataset.organisation['title']) %></dd>
          <dt>Last updated:</dt>
          <dd><%= format(@dataset.last_updated_at) %></dd>
          <dt>Expected update:</dt>
          <% if @dataset.datafiles.any? %>
            <dd class="<%= expected_update_class_for(@dataset.frequency) %>">
              <%= expected_update(@dataset) %>
            </dd>
          <% else %>
            <dd class="dgu-unavailable">
              This dataset has no data yet
            </dd>
          <% end %>
          <dt>Geographical area:</dt>
          <dd class="<%= expected_location_class_for(@dataset) %>">
            <%= dataset_location(@dataset) %>
          </dd>
        </dl>

        <h3 class="heading-small">
          Summary
        </h3>
        <p class="summary" style="max-height: 250px; overflow: hidden"> <%= unescape(@dataset.summary) %> </p>
      </div>
    </div>

    <div class="column-one-third dgu-dataset-right">
      <% unless @related_datasets.empty? %>
        <div class="dgu-dataset-right__related">
          <h3 class="heading-small">Related datasets</h3>
          <ul>
            <% @related_datasets.each do |dataset| %>
              <li>
                <%= link_to unescape(dataset.title), dataset_path(dataset.name) %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h3 class="heading-small">Search government data</h3>
      <form action="/search" method="GET" class="dgu-search-box">
        <label for="q" class="visuallyhidden">Search</label>
        <input id="q" name="q" type="text" class="form-control dgu-search-box__input"/><button type="submit" class="dgu-search-box__button">Find data</button>
      </form>

      <%= link_to 'Search help', search_tips_path %>
    </div>
  </div>
</section>

<% if @dataset %>
  <%
    if @referer_query.nil?
      second_breadcrumb_title = @dataset.organisation.title
    else
      second_breadcrumb_title = t('.search')
      second_breadcrumb_link = "/search?#{@referrer}"
    end
  %>

  <%= render "govuk_publishing_components/components/breadcrumbs", {
    collapse_on_mobile: true,
    breadcrumbs: [
      {
        title: t('.home'),
        url: root_path
      },
      {
        title: second_breadcrumb_title,
        url: second_breadcrumb_link
      },
      {
        title: shorten_title(@dataset.title),
        url: ""
      }
    ]
  } %>
<% end %>

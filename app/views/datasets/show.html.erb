<% content_for :page_title do %>
  <%= @dataset.title %> -
<% end %>
<main id="content" role="main">
  <%= render "breadcrumb" %>
  <%= render "meta_data" %>

  <% if @dataset.timeseries_datafiles.any? || @dataset.non_timeseries_datafiles.any? %>
    <div class="grid-row">
      <div class="column-full">
        <section class="dgu-datalinks">
          <h2 class="heading-medium"><%= t('.data_links') %>
            <% if @dataset.timeseries_datafiles.any? %>
              <!-- accordions for time series datasets -->
              <span class="showHide-open-all"><%= t('.open_all') %></span>
            <% end %>
          </h2>
          <% unless @dataset.timeseries_datafiles.empty? %>
            <%= render partial: "timeseries_datafiles", locals: {datafiles: @dataset.timeseries_datafiles} %>
          <% end %>
          <% unless @dataset.non_timeseries_datafiles.empty? %>
            <%= render partial: "non_timeseries_datafiles", locals: {datafiles: @dataset.non_timeseries_datafiles} %>
          <% end %>
        </section>
      </div>
    </div>
  <% end %>

  <% unless @dataset.additional_infos.empty? %>
    <%= render partial: "additional_infos", locals: {datafiles: @dataset.additional_infos} %>
  <% end %>

  <% if @dataset.organisation['contact_email'].present? %>
    <%= render "contact" %>
  <% end %>
</main>

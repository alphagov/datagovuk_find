<table class="dgu-datafiles">
  <tr>
    <th class="title small"><%= t('.link_to_data') %></th>
    <th><%= t('.format') %></th>
    <th><%= t('.last_updated') %></th>
    <th><%= t('.data_preview') %></th>
  </tr>
  <tbody>
  <% datafiles.each do |datafile| %>
    <tr class="<%= show_more?(datafiles, datafile) %> dgu-datafile">
      <td class="title small">
        <%= link_to (datafile.name ? datafile.name : 'Data Link'),
                    datafile.url,
                    :data => {:'ga-event' => "datafile-download"}
        %>
      </td>
      <% if datafile.format.blank? %>
        <td class="dgu-unavailable">N/A</td>
      <% else %>
        <td><%= datafile.format.upcase %>
          <% if datafile.size %>
            (<%= datafile.size %> kB)
          <% end %>
        </td>
      <% end %>
      <% if datafile.updated_at.present? %>
        <td>
          <%= format(datafile.updated_at) %>
        </td>
      <% else %>
        <td class="dgu-unavailable">Not available</td>
      <% end %>
      <td class="datafiles__preview">
        <% if datafile.html? %>
          <%= link_to 'Go to site', datafile.url %>
        <% elsif datafile.csv? %>
          <span class="dgu-unavailable">Coming soon</span>
        <% else %>
          <td class="dgu-unavailable"><%= t('.not_available') %></td>
        <% end %>
          <td class="datafiles__preview">
            <% if datafile.html? %>
              <%= link_to t('.go_to_site'), datafile.url %>
            <% elsif datafile.csv? %>
              <span class="dgu-unavailable"><%= t('.coming_soon') %></span>
            <% else %>
              <span class="dgu-unavailable"><%= t('.not_available') %></span>
            <% end %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>

<% if datafiles.length > 5 %>
  <button class="button secondary show-toggle">Show more</button>
<% end %>

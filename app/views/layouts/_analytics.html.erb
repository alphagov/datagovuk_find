<% if Rails.application.config.analytics_tracking_id or Rails.application.config.analytics_test_tracking_id %>
  <script>
    var trackingId = (document.location.hostname === 'beta.data.gov.uk')
      ? '<%= Rails.application.config.analytics_tracking_id %>'
      : '<%= Rails.application.config.analytics_test_tracking_id %>'

    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', trackingId, 'auto');
    ga('send', 'pageview');

    $(document).ready(function() {
      $('[data-ga-event]').on('click', function() {
        var eventDetails = $(this).data('ga-event').split('-')
        ga.apply(this, ['send', 'event'].concat(eventDetails))
      })
    })
  </script>
<% end %>
